        <splash src="www/res/screen/ios/Default-2436h.png" />
        <splash src="www/res/screen/ios/Default-Landscape-2436h.png" />
        <custom-config-file parent="UIBackgroundModes" platform="ios" target="*-Info.plist">
            <array>
                <string>fetch</string> 
                <string>location</string>
            </array>
        </custom-config-file>        
        

    </platform>
 
    <preference name="SplashScreenDelay" value="3500" /> 
    <preference name="FadeSplashScreenDuration" value="1500"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    
    <preference name="StatusBarBackgroundColor" value="#FFFFFF" />    
    <preference name="StatusBarStyle" value="default" />





    
